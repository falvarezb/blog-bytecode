<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds">

    <variable name="LOG_ROOT_LEVEL" value="${LOG_ROOT_LEVEL:-INFO}" />
    <variable name="LOG_PROVIDER_LEVEL" value="${LOG_PROVIDER_LEVEL:-INFO}" />
    <variable name="LOG_ACTOR_LEVEL" value="${LOG_ACTOR_LEVEL:-INFO}" />

    <property scope="context" name="logPattern"
              value="%d{HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>

    <appender name="CONSOLE_APPENDER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${logPattern}</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_APPENDER"/>
    </root>
</configuration>